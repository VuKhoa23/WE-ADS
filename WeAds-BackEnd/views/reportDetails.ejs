<body>

  <div id="editor">

  </div>

  <button class="btn btn-success " onclick="clicked()">Mark as resolved</button>
  <script>
    $(document).ready(function () {
      var quill = new Quill('#editor', {
        modules: {
          toolbar: false
        },
        placeholder: 'Compose an epic...',
        theme: 'snow',  // or 'bubble'
        readOnly: true
      });

      var p = document.querySelector("#editor");
      p.innerHTML = `<%- content %>`
    })


  </script>
