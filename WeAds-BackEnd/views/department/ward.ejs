<%- include('./partials/header') %>

<div class="container mt-5">
    <h1>All Ward Of <%= district %> District</h1>

    <% if (wards.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>SID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < wards.length; i++) { %>
                    <tr>
                        <td><%= wards[i].sid %></td>
                        <td><%= wards[i].name %></td>
                        <td></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    <% } else { %>
        <p>There are no wards.</p>
    <% } %>

    <a href="/weads/department/places/allDistrict">Back</a>
</div>

<%- include('./partials/footer') %>
