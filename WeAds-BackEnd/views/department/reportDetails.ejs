  <!-- Main Quill library -->
  <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
  <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
  <!-- Theme included stylesheets -->
  <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
  
  <style>
    .back-btn {
      position: absolute;
      left: 10px;
      top: 10px;
    }
    .title {
      font-size: 20px;
      font-weight: 700;
      margin: 0;
      padding: 8px 0;
    }
    .title-icon {
      font-size: 23px;
      margin-right: 4px;
    }
    .info-row {
      display: flex;
    }
    .row-name, 
    .row-info {
      font-size: 16px;
    }
    .row-name {
      min-width: 150px;
    }
    .row-info {
      font-weight: normal;
      margin-left: 8px;
    }
    .content {
      width: 100%;
      min-height: 100px;
      padding: 5px;
      border: 1px solid #000;
      border-radius: 10px;
      margin-bottom: 8px;
    }
    .solution {
      width: 100%;
      height: 200px;
      padding: 10px;
      font-size: 16px;
      border: 1px solid black;
      border-radius: 10px;
      outline: none;
      resize: none;
    }
    .overlay {
      position: fixed;
      width: 100vw;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content:center;
      top: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.05);
      z-index: 999;
    }
    .custom-modal {
      width: 400px;
      height: 200px;
      background: #fff;
      border-radius: 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .custom-modal i {
      font-size: 50px;
      margin-bottom: 8px;
    }
    .custom-modal h3 {
      font-size: 20px;
      font-weight: 500;
      margin-bottom: 16px;
    }
    #editor {
      width: 100%;
      min-height: 100px;
      max-height: 300px;
      margin: 8px 0;
      border: 1px solid #000;
      border-radius: 10px;
      padding: 5px;
      font-size: 16px;
      font-weight: normal;
      overflow-y: scroll;
    }
    .ql-toolbar {
      width: 70%;
      margin: auto
    }
  </style>
</head>

<body>
  <div class="card">
    <div class="card-header d-flex justify-content-center align-item-center">
      <a class="back-btn btn btn-outline-success" href="/weads/report"><i class="bi bi-chevron-left"></i>Trở lại</a>
      <i class="bi bi-file-earmark-richtext title-icon"></i>
      <h3 class="title">Chi tiết báo cáo</h3>
    </div>
    <div class="card-body">
      <div class="report-info">
        <div class="info-row">
          <h3 class="row-name">Họ tên người gửi:</h3>
          <h3 class="row-info"> <%- report.name %></h3>
        </div>
        <div class="info-row">
          <h3 class="row-name">Email:</h3>
          <h3 class="row-info"> <%- report.email %></h3>
        </div>
        <div class="info-row">
          <h3 class="row-name">Điện thoại liên lạc:</h3>
          <h3 class="row-info"> <%- report.phone %></h3>
        </div>
        <div class="info-row">
          <h3 class="row-name">Hình thức báo cáo:</h3>
          <h3 class="row-info">
            <% if(report.reportType == 0){ %>
              Tố giác sai phạm
            <% }else if(report.reportType == 1){ %>
              Đăng ký nội dung
            <% }else if(report.reportType == 2){ %>
              Đóng góp ý kiến
            <% }else{ %>
              Giải đáp thắc mắc
            <% } %>
          </h3>
        </div>
        <div class="info-row">
          <h3 class="row-name">Địa chỉ bị báo cáo:</h3>
          <h3 class="row-info"> <%- report.address %></h3>
        </div>
      </div>
      <div class="report-content">
        <h3 class="row-name">Nội dung báo cáo:</h3>
        <div id="editor">
        </div>
      </div>
      <% if (report.state != 'Waiting') { %>
        <div class="report-solution">
          <h3 class="row-name">Cách thức xử lí:</h3>
            <% if (report.state == 'Done') { %>
              <textarea placeholder="Nhập cách thức xử lí cho vấn đề này" class="solution" disabled><%- report.information %></textarea>
            <% } %>
            <% if (report.state == 'Processing') { %>
              <textarea placeholder="Nhập cách thức xử lí cho vấn đề này" class="solution"></textarea>
            <% } %>
        </div>
      <% } %>
    </div>
    <div style="min-height: 50px;" class="card-footer">
      <form class="d-flex justify-content-center" id="resolve-form">
        <% if (report.state == 'Processing') { %>
        <button type="submit" class="resolve-submit btn btn-success">Đã gải quyết <i class="bi bi-check2"></i></button>
        <% } %>
        <% if (report.state == 'Waiting') { %>
          <button type="submit" id="change-state-btn" class="btn btn-primary">Đang giải quyết <i class="bi bi-arrow-clockwise"></i></button>
        <% } %>
      </form>
    </div>
  </div>

  <script>
    function showSuccessModal() {
            Swal.fire({
                icon: 'success',
                title: 'Đã cập nhật báo cáo',
                showCancelButton: false,
                timer: null
            }).then((result) => {
                if (result.isConfirmed) {
                  window.location.href = '/weads/report';
                }
            });
    }
    function showErrorModal() {
        Swal.fire({
            icon: 'error',
            title: 'Có lỗi xảy ra, vui lòng thử lại',
            showCancelButton: false,
            timer: null
        });
    }

    $('#resolve-form').on('submit', async function(event) {
      event.preventDefault();

      let solution = $.trim($(".solution").val());

      if (solution.length == 0) 
        return;
      $('.resolve-submit').prop("disabled", true);
      
      const response = await fetch('/weads/send-result', {
        method: 'POST',
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ 
          reportId: '<%- report._id %>',
          reportSolution: solution
        })
      })
      .then (function(result) {
        return result.json();
      })
      if (response.success)
        showSuccessModal();
      else {
        $('.resolve-submit').prop("disabled", false);
        showErrorModal();
      }
    });

    $(document).ready(function() {
      $('#change-state-btn').click(async function(event) {
        event.preventDefault();
        $('#change-state-btn').prop("disabled", true);
        const response = await fetch('/weads/change-state', {
          method: 'POST',
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ 
            reportId: '<%- report._id %>'
          })
        })
        .then (function(result) {
          return result.json();
        })
        if (response.success) {
          location.reload();
        }
        else {
          $('#change-state-btn').prop("disabled", false);
          showErrorModal();
        }
      });
    });

    $(".close-modal").click(function(){
      $(".fail-modal").toggleClass("d-none");
    });
  </script>
  <script>
    $(document).ready(function () {
      var quill = new Quill('#editor', {
        modules: {
          toolbar: false
        },
        placeholder: 'Compose an epic...',
        theme: 'snow',  // or 'bubble'
        readOnly: true
      });

      var p = document.querySelector("#editor");
      p.innerHTML = `<%- report.content %>`
    })
  </script>
