  <link rel="stylesheet" href="/css/layout.css">
</head>
<body>
  <div class=".flex-nowrap container-fluid">
    <div class="row">
      <aside class="sidebar collapsed col-12 col-sm-4 col-md-2">
        <div class="h-100">
          <div class="d-flex justify-content-between border-bottom">
            <h3 class="text-body">WeAds</h3>
            <i class="bi bi-x"></i>
          </div>
          <ul class="sidebar-list">
            <% if (role === 'Department') { %>
              <li class="sidebar-item w-100 d-flex align-items-center p-1"><a href="" class="text-body"></a></li>
              <li class="sidebar-item w-100 d-flex align-items-center p-1"><a href="" class="text-body">Xem báo cáo</a></li>
              <li class="sidebar-item w-100 d-flex align-items-center p-1"><a href="" class="text-body">Xét duyệt yêu cầu</a></li>
              <li class="sidebar-item w-100 d-flex align-items-center p-1">
                <i class="bi bi-box-arrow-right"></i>
                <a href=""class="text-body mx-2">Đăng xuất</a>
              </li>
            <% } else { %>
            <% } %>
          </ul>
        </div>
      </aside>

      <div class="main flex-grow-1 col-12 col-sm-8 col-md-10">
        <nav class="navbar navbar-expand-sm px-3 border-bottom">
          <button class="btn sidebar-toggler">
            <span class="navbar-toggler-icon"></span>
          </button>
        </nav>

      
      </div>
    </div>
  </div>
    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="/js/sidebar.js"></script>
